<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
android:transitionName="join"
    android:layout_height="match_parent"
    android:background="@drawable/bakkkg"
    tools:context=".Buyers.RegisterActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/signup"
        android:layout_marginBottom="470dp"
        android:layout_marginTop="8dp"
        >
        ></ImageView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/register_username"
        android:layout_marginLeft="15dp"
        android:drawableStart="@drawable/ic_person_black_24dp"
        android:drawablePadding="5dp"
        android:layout_marginRight="15dp"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:padding="20dp"
        android:background="@drawable/inputs_design"
        android:hint="Name"
        android:layout_marginVertical="4dp"
        android:textColorHint="@android:color/white"
        android:inputType="text"
        android:textColor="@android:color/white"
        android:layout_above="@id/register_phone"
        android:textSize="17dp"></EditText>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/register_phone"
        android:layout_marginLeft="15dp"
        android:textColor="@android:color/white"
        android:drawableStart="@drawable/ic_smartphone_black_24dp"
        android:drawablePadding="5dp"
        android:layout_marginRight="15dp"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:padding="20dp"
        android:layout_marginVertical="4dp"
        android:background="@drawable/inputs_design"
        android:hint="Phone Number"
        android:textColorHint="@android:color/white"
        android:inputType="number"
        android:textSize="17dp"

        ></EditText>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/register_pass"
        android:textColor="@android:color/white"
        android:layout_below="@id/register_phone"
        android:layout_marginVertical="5dp"
        android:layout_marginLeft="15dp"
        android:drawableStart="@drawable/ic_lock_outline_black_24dp"
        android:drawablePadding="5dp"

        android:layout_marginRight="15dp"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:padding="20dp"
        android:background="@drawable/inputs_design"
        android:hint="Password"
        android:textColorHint="@android:color/white"
        android:inputType="textPassword"
        android:textSize="17dp"

        ></EditText>
    <Button
        android:id="@+id/registerbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_pass"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:background="@drawable/buttons"
        android:padding="20dp"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:text="Create Account"
        android:layout_marginVertical="9dp"
        android:textColor="@android:color/white"

        ></Button>

</RelativeLayout>