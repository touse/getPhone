<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="2dp"
    android:transitionName="login"
    android:background="@drawable/bakkkg"
    tools:context=".Buyers.LoginActivity">

    <ImageView
        android:id="@+id/img11"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ligin"
        android:layout_marginBottom="400dp"
        ></ImageView>

<com.google.android.material.textfield.TextInputLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
    android:hint="Enter UserName"
    app:hintTextColor="@android:color/black"
    app:boxStrokeColor="@android:color/black"
    app:boxStrokeWidthFocused="2dp"
    app:startIconDrawable="@drawable/ic_person_black_24dp"
    app:startIconTint="@android:color/black"
    app:endIconMode="clear_text"
    app:endIconTint="@android:color/black"
android:layout_below="@id/img11"
    >

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"



        ></com.google.android.material.textfield.TextInputEditText>
</com.google.android.material.textfield.TextInputLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lgn_phone"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:padding="20dp"
        android:drawableStart="@drawable/ic_smartphone_black_24dp"
        android:drawablePadding="5dp"
        android:background="@drawable/inputs_design"
        android:textColor="@android:color/white"
        android:hint="Phone Number"
        android:textColorHint="@android:color/white"
        android:inputType="number"
        android:textSize="17dp"

        ></EditText>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lgn_pass"
        android:drawableStart="@drawable/ic_lock_outline_black_24dp"
        android:drawablePadding="5dp"

        android:layout_below="@id/lgn_phone"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:padding="20dp"
        android:textColor="@android:color/white"
        android:layout_marginTop="7dp"
        android:background="@drawable/inputs_design"
        android:hint="Password"
        android:textColorHint="@android:color/white"
        android:inputType="textPassword"
        android:textSize="17dp"

        ></EditText>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear1"
        android:orientation="horizontal"
        android:layout_below="@id/lgn_pass"
        android:layout_marginTop="5dp"
        >
        <com.rey.material.widget.CheckBox
            android:id="@+id/check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Material.Drawable.CheckBox"
            android:text="Remember me"
            android:textColor="@android:color/white"
            app:cbd_strokeColor="@color/colorPrimaryDark"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginLeft="17dp"
            ></com.rey.material.widget.CheckBox>

        <TextView
            android:id="@+id/forget_password_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forget Password?"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginLeft="85dp"
            ></TextView>


    </LinearLayout>

    <Button
        android:id="@+id/loginbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear1"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:background="@drawable/buttons"
        android:padding="20dp"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:text="Login"
        android:textColor="@android:color/white"

        ></Button>

    <TextView
        android:id="@+id/adminpanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I'm an Admin?"
        android:layout_below="@id/loginbtn"
        android:textSize="20sp"
        android:layout_alignParentEnd="true"
        android:textStyle="bold"

        android:textColor="@android:color/white"
        android:layout_marginLeft="85dp"
        android:layout_marginEnd="22dp"

        ></TextView>

    <TextView
        android:id="@+id/notadminpanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I'm Not an Admin?"
        android:layout_below="@id/loginbtn"
        android:textSize="20sp"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginLeft="85dp"
        android:layout_marginStart="22dp"
        android:visibility="invisible"

        ></TextView>
</RelativeLayout>
