<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E4FFE4"
    tools:context=".AllCategories">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize">


            <ImageView
                android:id="@+id/back_pressed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_arrow_back"
                android:layout_centerVertical="true"
                android:padding="15dp"
                ></ImageView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/search_icon"
                android:layout_centerVertical="true"
                android:padding="15dp"
                android:layout_alignParentRight="true"
                ></ImageView>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="categories"
            android:textSize="30sp"
            android:textAllCaps="true"
            android:padding="10dp"
            android:fontFamily="sans-serif"
            ></TextView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="15dp"
            android:background="@drawable/download1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Car Rent"
                android:textSize="30sp"
                android:textColor="@android:color/white"
                android:padding="25dp"
                android:textStyle="bold"
                ></TextView>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expand All"
                android:background="#00000000"
                android:textColor="@android:color/white"
                android:layout_alignParentBottom="true"
                android:padding="20dp"
                android:layout_marginLeft="12dp"
                ></Button>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/aco"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="17dp"
                ></ImageView>



        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="15dp"
            android:background="@drawable/aaa"
            >

            <ImageView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:src="@drawable/pizza"
                android:layout_marginLeft="12dp"
                ></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Restaurant"
                android:textSize="30sp"
                android:layout_alignParentRight="true"
                android:textColor="@android:color/white"
                android:padding="25dp"
                android:textStyle="bold"
                ></TextView>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expand All"
                android:layout_alignParentRight="true"
                android:background="#00000000"
                android:textColor="@android:color/white"
                android:layout_alignParentBottom="true"
                android:padding="20dp"
                android:layout_marginLeft="12dp"
                ></Button>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="15dp"
            android:background="@drawable/images4">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Flowers"
                android:textSize="30sp"
                android:textColor="@android:color/black"
                android:padding="25dp"
                android:textStyle="bold"
                ></TextView>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expand All"
                android:background="#00000000"
                android:textColor="@android:color/black"
                android:layout_alignParentBottom="true"
                android:padding="20dp"
                android:layout_marginLeft="12dp"
                ></Button>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/flower"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="17dp"
                ></ImageView>



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="15dp"
            android:background="@drawable/download1"
            >

            <ImageView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:src="@drawable/doctor"
                android:layout_marginLeft="12dp"
                ></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hospitals"
                android:textSize="30sp"
                android:layout_alignParentRight="true"
                android:textColor="@android:color/white"
                android:padding="25dp"
                android:textStyle="bold"
                ></TextView>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expand All"
                android:layout_alignParentRight="true"
                android:background="#00000000"
                android:textColor="@android:color/white"
                android:layout_alignParentBottom="true"
                android:padding="20dp"
                android:layout_marginLeft="12dp"
                ></Button>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="15dp"
            android:background="@drawable/download1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Car Rent"
                android:textSize="30sp"
                android:textColor="@android:color/white"
                android:padding="25dp"
                android:textStyle="bold"
                ></TextView>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expand All"
                android:background="#00000000"
                android:textColor="@android:color/white"
                android:layout_alignParentBottom="true"
                android:padding="20dp"
                android:layout_marginLeft="12dp"
                ></Button>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/aco"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="17dp"
                ></ImageView>



        </RelativeLayout>

    </LinearLayout>

</ScrollView>